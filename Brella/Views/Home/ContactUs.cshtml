
@{
    ViewData["Title"] = "تماس با ما";
}

@model InboxViewModel
<section>
    <div class="w-100 pt-170 pb-150 dark-layer3 opc7 position-relative">
        <div class="fixed-bg" style="background-image: url(/assets/images/pagetop-bg.jpg);"></div>
        <div class="container">
            <div class="page-top-wrap w-100">
                <h1 class="mb-0">تماس با ما</h1>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="index" asp-controller="home" title="">خانه</a></li>
                    <li class="breadcrumb-item active"><a asp-action="contactus" asp-controller="home" title="">تماس با ما</a></li>
                </ol>
            </div><!-- Page Top Wrap -->
        </div>
    </div>
</section>
<section>
    <div class="w-100 pt-100 pb-100 position-relative">
        <div class="container">
            <div class="contact-wrap position-relative w-100">
                <div class="contact-info-wrap text-center position-absolute">
                    <div class="row">
                        <div class="col-md-4 col-sm-4 col-lg-4">
                            <div class="contact-info-box w-100">
                                <i class="thm-clr flaticon-headset"></i>
                                <strong>تلفن ما</strong>
                                <span href="tel:@ViewBag.PhoneNumber" class="d-block">@ViewBag.PhoneNumber</span>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-4 col-lg-4">
                            <div class="contact-info-box w-100">
                                <i class="thm-clr flaticon-mail"></i>
                                <strong>صندوق پستی ما</strong>
                                <a class="d-block" href="mailto:ViewBag.Email" title="">@ViewBag.Email</a>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-4 col-lg-4">
                            <div class="contact-info-box w-100">
                                <i class="thm-clr flaticon-placeholder"></i>
                                <strong>آدرس ما</strong>
                                <p class="mb-0">
                                    @ViewBag.Address
                                </p>
                            </div>
                        </div>
                    </div>
                </div><!-- Contact Info Wrap -->
            </div><!-- Contact Wrap -->
        </div>
    </div>
</section>
<section>
    <div class="w-100 pb-100 position-relative">
        <div class="container">
            <div class="sec-title v2 text-center w-100">
                <div class="sec-title-inner d-inline-block">
                    <span class="thm-clr d-block">تماس با ما</span>
                    <h2 class="mb-0">@(ViewBag.contactUsTitle != null ? ViewBag.contactUsTitle : "")</h2>
                    <p class="mb-0">@(ViewBag.contactUsDescription != null ? ViewBag.contactUsDescription : "")</p>
                </div>
            </div>
            <form asp-action="insertInbox" asp-controller="crud"
                  class="contact-form text-center w-100" id="email-form">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-lg-12">
                        <div class="form-group w-100">
                            <div class="response w-100"></div>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6 col-lg-6">
                        <label class="d-block">نام و نام خانوادگی :</label>
                        <input class="fname" type="text" asp-for="nameFamily">
                        <span asp-validation-for="nameFamily"></span>
                    </div>
                    <div class="col-md-6 col-sm-6 col-lg-6">
                        <label class="d-block">شماره تلفن :</label>
                        <input class="fname" type="text" asp-for="phonenumber">
                        <span asp-validation-for="phonenumber"></span>
                    </div>
                    <div class="col-md-12 col-sm-12 col-lg-12">
                        <label class="d-block">یک پیغام بنویسید :</label>
                        <textarea class="contact_message" asp-for="message"></textarea>
                        <span asp-validation-for="message"></span>
                        <button id="maininboxbtn" hidden></button>
                    </div>
                </div>
            </form><!-- Contact Form -->
            <button class="thm-btn thm-bg" id="secondinboxbtn" type="button">
                ارسال<i class="flaticon-arrow-pointing-to-left"></i>
            </button>
        </div>
    </div>
</section>

<script>
    $(function () {
        $(secondinboxbtn).click(function () {
            Swal.fire({
                title: 'ثبت پیغام',
                text: "پیغام مورد نظر ثبت شود؟",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'بله',
                cancelButtonText: 'بازگشت'

            }).then((result) => {
                if (result.isConfirmed) {
                    $(maininboxbtn).click()
                }
            })
        })
    })
</script>
